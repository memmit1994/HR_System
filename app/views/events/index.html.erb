<p id="notice"><%= notice %></p>
<h1>Listing Events</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start %></td>
        <td><%= event.end %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add Seminar', new_event_seminar_path(event) %></td>
        <td><%= link_to 'Add Shift',{:controller => 'shifts',:action => 'new',:event_id => event.id } %></td>
        <td><%= link_to 'Shifts',{:controller => 'shifts',:action => 'index',:event_id => event.id } %></td>
        <td><%= link_to 'Seminars',{:controller => 'seminars',:action => 'index',:event_id => event.id } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Event', new_event_path %><br>
<%= link_to 'See All Assigned Tasks', tasks_path %>