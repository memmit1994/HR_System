<p id="notice"><%= notice %></p>
<h1>Listing Seminars</h1>
<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Event</th>
      <th>Name</th>
      <th>Speaker</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @seminars.each do |seminar| %>
      <tr>
        <td><%= seminar.start %></td>
        <td><%= seminar.end %></td>
        <td><%= seminar.event_id %></td>
        <td><%= seminar.name %></td>
        <td><%= seminar.speaker %></td>
        <td><%= seminar.description %></td>
        <td><%= link_to 'Show', seminar %></td>
        <td><%= link_to 'Edit', edit_seminar_path(seminar) %></td>
        <td><%= link_to 'Destroy', seminar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Assign Task For Seminar',{:controller => 'tasks',:action => 'new',:seminar_id => seminar.id } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Seminar', new_seminar_path %>