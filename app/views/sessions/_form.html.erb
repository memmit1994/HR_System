<%= form_for(@session) do |f| %>
  <% if @session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
      <% @session.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :speaker %><br>
      <%= f.text_field :speaker %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </div>
    <% if params['event_id'] %>
          <%= f.hidden_field :event_id , :value => params['event_id']%>
    <% else %>
        <div class="field">
          <%= f.label :event_id %><br>
          <%= f.collection_select :event_id,Event.all,:id,:name %>
        </div>
    <% end %>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.datetime_select :end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
