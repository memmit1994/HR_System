<p id="notice"><%= notice %></p>
<h1>Listing Tasks</h1>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th>Seminars</th>
      <th>Shift</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= User.find_by_id(task.user_id) ? User.find_by_id(task.user_id).name : '' %></td>
        <td><%= Seminar.find_by_id(task.seminar_id) ? Seminar.find_by_id(task.seminar_id).start_time : '' %></td>
        <td><%= Shift.find_by_id(task.shift_id) ? Shift.find_by_id(task.shift_id).start_time : '' %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Task', new_task_path %>